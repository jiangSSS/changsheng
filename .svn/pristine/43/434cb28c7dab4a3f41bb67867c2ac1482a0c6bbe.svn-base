                </el-form-item>
              </div>
            </el-col>
            <el-col :span="8">
              <div class="grid-content">
                <el-form-item label="查询区间">
                  <el-select v-model="form.querytype" placeholder="请选择" clearable>
                    <el-option
                      v-for="item in value1"
                      :key="item.id"
                      :label="item.name"
                      :value="item.id"
                    ></el-option>
                  </el-select>
                </el-form-item>
              </div>
