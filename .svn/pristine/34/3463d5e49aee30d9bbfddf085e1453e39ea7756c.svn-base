                    <el-option
                      v-for="item in cardTypeList"
                      :key="item.code"
                      :label="item.codename"
                      :value="item.code"
                    ></el-option>
                  </el-select>
                </el-form-item>
              </div>
            </el-col>
            <el-col :span="8">
              <div class="grid-content">
                <el-form-item label="证件号码">
                  <el-input v-model="listForm.idno" maxlength="100" @keyup.enter.native="initList"></el-input>
