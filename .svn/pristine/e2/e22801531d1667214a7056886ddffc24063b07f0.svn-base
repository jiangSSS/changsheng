          :model="form"
          :rules="formrules"
          ref="form"
        >
          <el-row>
            <el-col :span="8">
              <div class="colItem">
                <el-form-item label="险种代码" prop="getdutykind">
                  <el-input v-model="form.riskcode" disabled></el-input>
                </el-form-item>
