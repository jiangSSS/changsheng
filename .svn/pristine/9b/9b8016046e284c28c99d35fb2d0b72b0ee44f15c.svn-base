    <el-table
      :data="policyData.slice((currpage1 - 1) * pagesize1, currpage1 * pagesize1)"
      style="width: 100%"
    >
      <el-table-column type="expand">
        <template slot-scope="props">
          <el-form v-model="labelPosition">
            <el-row>
